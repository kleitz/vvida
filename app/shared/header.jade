md-toolbar.md-accent.md-whiteframe-z3.header-spacing(ng-controller='HeaderCtrl')
  .md-toolbar-tools.md-accent
    md-button.md-icon-button.show-sm.hide-gt-sm(ng-click='openLeftMenu()', aria-label="openLeftMenu")
      i.fa.fa-bars.fa-2x
    a(ui-sref='home')
      img(src='images/logo.png' height='24' hide-sm)
    span(flex)

    a(ng-repeat='menuItem in menu' ui-sref='{{menuItem.state}}' hide-sm)
        md-button(style="color: white")
          {{menuItem.name}}
    a(ng-if='currentUser' hide-sm)
        md-button(style="color: white")
          {{currentUser.name}}
    a(ng-if='currentUser' ui-sref='userProfile' )
      md-button.md-icon-button(aria-label='Comment' style='height: 48px; width: 48px; margin: 20px; padding: 0px;')
        img(ng-src='{{currentUser.img_url}}')
    a(ng-if='currentUser')
     md-button.md-icon-button(style="color: white" aria-label='Sign out' ng-click='logout()')
      i.fa.fa-sign-out
      md-tooltip Sign out
    a(ng-if='!currentUser' ui-sref='login')
      md-button.md-icon-button(style="color: white")
        span.fa.fa-sign-in
        md-tooltip Sign in
md-sidenav.md-sidenav-left(md-component-id='left' hide-gt-sm)
  md-toolbar.md-accent
    h1.md-toolbar-tools
      a(ui-sref='home')
        img(src='images/logo.png' height='16')
        span.text-color.white &nbsp;Vvida
  md-content.sidenav-contents
    md-button.menu-button(ng-repeat='menuItem in menu' ui-sref='{{menuItem.state}}' ng-click='closeLeftMenu()') {{menuItem.name}}


