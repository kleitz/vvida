.footer.hide-sm(ng-controller="FooterCtrl" layout="column")
  .md-padding(layout="row" layout-md="column" layout-sm="column" flex layout-align="center")
    .nav-links(flex-gt-md="50" layout="row" layout-align="start" flex layout-padding)
      .footer-item-group(layout="column")
        .md-title.footer-titles About
        div.footer-links(ng-repeat="aboutItem in about" ui-sref="{{aboutItem.state}}", aria-label="aboutItem.name") {{aboutItem.name}}

      .footer-item-group(layout="column")
        .md-title.footer-titles Discover
        div.footer-links(ng-repeat="item in discover" ui-sref="{{item.state}}", aria-label="item.name") {{item.name}}

      .footer-item-group(layout="column")
        .md-title.footer-titles Business
        div.footer-links(ng-repeat="item in business" ui-sref="{{item.state}}", aria-label="item.name") {{item.name}}

    md-divider.md-inset

    .social_icons(layout="column" flex-gt-md="50" flex layout-align="start start" layout-padding)   
      .footer-titles Join Us
      div.icons(layout="row" layout-md="row" layout-sm="column")
        span.fa.fa-google-plus-square.fa-2x.text-white
        span.fa.fa-facebook-square.fa-2x.text-white
        span.fa.fa-twitter-square.fa-2x.text-white
        span.fa.fa-instagram.fa-2x.text-white
        span.fa.fa-linkedin-square.fa-2x.text-white
        span.fa.fa-pinterest-square.fa-2x.text-white
        span.fa.fa-youtube-square.fa-2x.text-white

  .md-padding
    md-divider.md-inset
